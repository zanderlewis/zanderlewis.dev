---
import Layout from "../layouts/Layout.astro";
import ListSection from "../components/ListSection.astro";
import ListSection2 from "../components/ListSection2.astro";
import portfolioData from "../data/portfolio.json";
---

<Layout>
  <main class="relative min-h-screen p-8">
    <div class="max-w-4xl mx-auto">
      <!-- Hero Section -->
      <div class="mb-12 text-center relative">
        <div class="relative pt-8">
          <div class="mb-8 relative group">
            <img
              src={portfolioData.image}
              alt={portfolioData.name}
              class="w-40 h-40 rounded-full mx-auto border-4 border-purple-500/20 shadow-xl object-cover relative animate-border"
            />
          </div>
          <h1
            class="text-5xl font-bold text-white mb-2 bg-gradient-to-r from-purple-400 to-pink-600 bg-clip-text text-transparent"
          >
            {portfolioData.name}
          </h1>
          <p class="text-xl text-gray-400 mb-4">{portfolioData.title}</p>
          <p class="text-gray-400 flex items-center justify-center gap-2 mb-6">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            {portfolioData.location}
          </p>

          <!-- Social Links -->
          <div class="flex justify-center gap-4 mb-8">
            {
              portfolioData.links.map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-white transition-colors transform hover:scale-110"
                  title={link.name}
                >
                  <svg
                    viewBox="0 0 24 24"
                    class="w-6 h-6 fill-current"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d={link.icon} />
                  </svg>
                </a>
              ))
            }
          </div>

          <p class="text-gray-300 max-w-2xl mx-auto">{portfolioData.bio}</p>
        </div>
      </div>

      <div class="space-y-8">
        <!-- About Section -->
        <div
          class="bg-gray-800 rounded-xl p-8 border border-gray-700 backdrop-blur-lg"
        >
          <h2 class="text-2xl font-semibold text-white mb-6 flex items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 mr-2 text-purple-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
            Quick Facts
          </h2>
          <div class="grid grid-cols-2 gap-2">
            <div class="bg-gray-700/50 p-4 rounded-lg">
              <p class="text-gray-400 text-sm">Age</p>
              <p class="text-xl font-medium text-white">
                {
                  Math.floor(
                    (new Date().getTime() -
                      new Date(portfolioData.birthDate).getTime()) /
                      (365.25 * 24 * 60 * 60 * 1000),
                  )
                } years
              </p>
            </div>
            <div class="bg-gray-700/50 p-4 rounded-lg">
              <p class="text-gray-400 text-sm">Experience</p>
              <p class="text-xl font-medium text-white">
                {
                  Math.floor(
                    (new Date().getTime() -
                      new Date(portfolioData.experienceSince).getTime()) /
                      (365.25 * 24 * 60 * 60 * 1000),
                  )
                } years
              </p>
            </div>
          </div>
        </div>

        <!-- Skills -->
        <ListSection
          title="Skills"
          iconPath="M13 10V3L4 14h7v7l9-11h-7z"
          color="purple"
          items={portfolioData.skills}
        />

        <!-- Programming Languages -->
        <ListSection
          title="Programming Languages"
          iconPath="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
          color="pink"
          items={portfolioData.programmingLanguages}
        />

        <!-- Learning -->
        <ListSection
          title="Learning"
          iconPath="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
          color="blue"
          items={portfolioData.learning}
        />

        <!-- Wakatime Stats -->
        <div class="bg-gray-800 rounded-xl p-8 border border-gray-700">
          <h2 class="text-2xl font-semibold text-white mb-6 flex items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 mr-2 text-blue-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Coding Activity
          </h2>
          <a href="https://wakatime.com/@2f94f83c-7859-4053-a093-81ba6053e5e3"
            ><img
              src="https://wakatime.com/badge/user/2f94f83c-7859-4053-a093-81ba6053e5e3.svg"
              alt="Wakatime Stats"
            /></a
          >
        </div>

        <!-- Projects Section -->
        <ListSection2
          sectionType="projects"
          title="Featured Projects"
          iconPath="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
          data={portfolioData.projects}
        />

        <!-- Achievements Section -->
        <ListSection2
          sectionType="achievements"
          title="Achievements"
          iconPath="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
          data={portfolioData.achievements}
        />
        <!-- Education Section -->
        <ListSection2
          sectionType="education"
          title="Education"
          iconPath="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
          data={portfolioData.education}
        />
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    font-family:
      "Inter",
      system-ui,
      -apple-system,
      sans-serif;
  }

  /* Animated border for profile picture */
  .animate-border {
    animation: borderAnimation 3s ease-in-out infinite;
  }

  @keyframes borderAnimation {
    0% {
      border-color: rgba(139, 92, 246, 0.2);
    }
    50% {
      border-color: rgba(236, 72, 153, 0.8);
    }
    100% {
      border-color: rgba(139, 92, 246, 0.2);
    }
  }

  pre {
    scrollbar-width: thin;
    scrollbar-color: rgba(139, 92, 246, 0.5) rgba(17, 24, 39, 0.7);
  }

  pre::-webkit-scrollbar {
    height: 8px;
  }

  pre::-webkit-scrollbar-track {
    background: rgba(17, 24, 39, 0.7);
    border-radius: 4px;
  }

  pre::-webkit-scrollbar-thumb {
    background: rgba(139, 92, 246, 0.5);
    border-radius: 4px;
  }

  pre::-webkit-scrollbar-thumb:hover {
    background: rgba(139, 92, 246, 0.7);
  }
</style>
