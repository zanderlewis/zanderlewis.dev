---
import Layout from "../../../layouts/Layout.astro";
import { getAllPosts, getAllTags } from "../../../lib/posts";

// Pre-render all tag pages
export async function getStaticPaths(): Promise<Array<{ params: { tag: string } }>> {
  const tagMap = getAllTags();
  return Object.keys(tagMap).map(tag => ({ params: { tag } }));
}

const posts = getAllPosts();
const tagParam = String(Astro.params.tag ?? '');
const tag = decodeURIComponent(tagParam);

const filtered = posts
  .filter((p: any) => (p.frontmatter?.tags ?? []).map((t: any) => String(t)).includes(tag))
  .sort((a: any, b: any) => new Date(String(b.frontmatter?.pubDate)).getTime() - new Date(String(a.frontmatter?.pubDate)).getTime());
---

<Layout title={`Posts tagged ${tag} | Zander Lewis`} description={`Posts tagged ${tag}`}>
  <main class="relative min-h-screen p-8">
    <div class="max-w-3xl mx-auto">
      <nav class="mb-6">
        <a href="/blog" class="text-sm text-gray-400 hover:text-white">← Back to blog</a>
      </nav>

      <header class="mb-6">
        <h1 class="text-3xl font-bold text-white mb-2">#{tag}</h1>
        <p class="text-gray-300">Showing {filtered.length} post{filtered.length === 1 ? '' : 's'}.</p>
      </header>

      <ul class="space-y-4">
        {filtered.map((post: any) => (
          <li class="p-5 border border-gray-500/30 rounded-lg hover:bg-white/5 transition-colors">
            <a href={`/blog/${post.frontmatter.slug}`} class="block">
              <h2 class="text-2xl font-semibold text-white">{post.frontmatter.title}</h2>
              <p class="text-gray-400 text-sm mt-1">{new Date(String(post.frontmatter.pubDate)).toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' })}</p>
              {post.frontmatter.description && <p class="text-gray-300 mt-2">{post.frontmatter.description}</p>}
            </a>
          </li>
        ))}
      </ul>

      <nav class="mt-6">
        <a href="/blog" class="text-sm text-gray-400 hover:text-white">← Back to blog</a>
      </nav>

      {filtered.length === 0 && (
        <p class="text-gray-400">No posts found for this tag.</p>
      )}
    </div>
  </main>
</Layout>
