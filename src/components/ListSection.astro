---
export interface Props {
    title: string;
    iconPath: string;
    color: string; // e.g., "purple", "pink", "blue"
    items: string[];
}

const { title, iconPath, color, items } = Astro.props;
---

<div class="rounded-xl p-8 border border-gray-500/30">
    <h2 class="text-2xl font-semibold text-white mb-6 flex items-center">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 mr-2 text-purple-400"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path d={iconPath}></path>
        </svg>
        {title}
    </h2>
    <div class="flex flex-wrap gap-3">
        {
            items.map((item) => (
                <span class="px-4 py-2 rounded-lg border border-gray-500/50 transition-colors text-gray-300 hover:bg-gray-700/30">
                    {item}
                </span>
            ))
        }
    </div>
</div>